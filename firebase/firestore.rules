rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /gigs/{gigId}/testers/{testerId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;

      match /days/{dayId} {
        allow read, write: if request.auth != null && request.auth.token.admin == true;
      }
    }

    // Block direct client writes. Clients must use Cloud Functions callable endpoint.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

